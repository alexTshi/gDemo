<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<properties>
		<property name="basePath">./logs</property>
	</properties>
  <Appenders><!-- using the roolingFile tag, should allow for the file to be downloaded within the CWD -->
  	<RollingFile name="File" fileName="Logs/prints.log" filePattern="${basePath}">
  		<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
  		<sizeBasedTriggeringPolicy size="500"/>
  	</RollingFile>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
  </Appenders>
  <Logger ><!-- Below will allow for specific packages to display specific types of logs -->
    <Root level="trace">
      <AppenderRef ref="File"/>
    </Root>
  </Logger>
</Configuration>